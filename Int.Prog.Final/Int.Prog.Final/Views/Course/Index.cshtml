@model IEnumerable<Int.Prog.Final.Models.Course>

@{
    ViewBag.Title = "Course Index";
}

<h2>Course Index</h2>

<div class="text-right mb-3">
    @Html.ActionLink("Add New Course", "AddCourse", null, new { @class = "btn btn-primary" })
</div>

<table class="table table-striped table-custom">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.CourseName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Credit)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.CourseName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Credit)
                </td>
                <td>
                    @Html.ActionLink("Edit", "EditCourse", new { id = item.CourseId }, new { @class = "btn btn-sm btn-outline-primary" }) |
                    @Html.ActionLink("Delete", "DeleteCourse", new { id = item.CourseId }, new { @class = "btn btn-sm btn-outline-danger", onclick = "return confirm('Emin misiniz?');" })
                </td>
            </tr>
        }
    </tbody>
</table>

<div class="text-right">
    @Html.ActionLink("Back to List", "Index", null, new { @class = "btn btn-secondary" })
</div>
