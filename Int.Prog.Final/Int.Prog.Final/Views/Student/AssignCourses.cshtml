@model Int.Prog.Final.Models.Student

@{
    ViewBag.Title = "Assign Courses to Student";
}

<h2>Assign Courses to @Model.Name @Model.Surname</h2>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <h4>Select Courses</h4>
        <hr />

        <div class="form-group">
            @foreach (var course in ViewBag.Courses)
            {
                <div class="course-item">
                    <input type="checkbox" name="selectedCourses" value="@course.CourseId" @(Model.StudentCourses.Any(sc => sc.CourseId == course.CourseId) ? "checked" : "") /> @course.CourseName
                </div>
            }
        </div>

        <div class="form-group row">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Save" class="btn btn-primary float-right" />
            </div>
        </div>
    </div>
}

<div class="text-right">
    @Html.ActionLink("Back to List", "Index", null, new { @class = "btn btn-secondary" })
</div>
